{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string" },
        "permissions": { "type": "array", "items": { "type": "string" } },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "photoUrl": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" },
        "isActive": { "type": "boolean" }
      },
      "required": ["uid", "email", "role", "firstName", "lastName"]
    },
    "Client": {
      "title": "Client",
      "description": "Represents a client.",
      "type": "object",
      "properties": {
        "ownerId": { "type": "string" },
        "country": { "type": "string", "description": "ISO 3166-1 alpha-2 country code." },
        "city": { "type": "string" },
        "type": { "type": "string", "enum": ["individual", "business"] },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "businessName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "primaryPhone": { "type": "string" },
        "status": { "type": "string", "enum": ["active", "inactive", "pending"] }
      },
      "required": ["ownerId", "country", "type", "email", "primaryPhone", "status"]
    },
    "Master": {
      "title": "Master",
      "description": "Represents a professional/master.",
      "type": "object",
      "properties": {
        "ownerId": { "type": "string" },
        "country": { "type": "string", "description": "ISO 3166-1 alpha-2 country code." },
        "city": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "specialties": { "type": "array", "items": { "type": "string" } },
        "coverageZones": { "type": "array", "items": { "type": "string" } },
        "rating": { "type": "number" },
        "status": { "type": "string", "enum": ["active", "inactive", "pending_verification"] },
        "documents": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "url": { "type": "string", "format": "uri" }
            }
          }
        }
      },
      "required": ["ownerId", "country", "city", "firstName", "lastName", "email", "phone", "specialties", "status"]
    },
    "WorkOrder": {
      "title": "Work Order",
      "description": "Represents a work order.",
      "type": "object",
      "properties": {
         "ownerId": { "type": "string" },
         "country": { "type": "string", "description": "ISO 3166-1 alpha-2 country code." },
         "orderNumber": { "type": "string" },
         "clientId": { "type": "string" },
         "masterId": { "type": "string" },
         "status": { "type": "string" },
         "title": { "type": "string" },
         "total": { "type": "number" },
         "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["ownerId", "country", "orderNumber", "clientId", "status", "title", "total", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/clients/{clientId}": {
      "schema": { "$ref": "#/entities/Client" },
      "description": "Stores client information."
    },
    "/masters/{masterId}": {
      "schema": { "$ref": "#/entities/Master" },
      "description": "Stores master/professional information."
    },
    "/work-orders/{workOrderId}": {
      "schema": { "$ref": "#/entities/WorkOrder" },
      "description": "Stores work order details."
    }
  }
}
