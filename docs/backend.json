
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user within the Maestro-Ya Pro application, combining profile, preferences, and metadata.",
      "properties": {
        "uid": { "type": "string", "description": "Firebase UID of the user, linked to the authentication system." },
        "email": { "type": "string", "description": "Email address of the user.", "format": "email" },
        "role": { "type": "string", "description": "Role of the user within the application (e.g., SUPER_ADMIN, ADMIN, OPERATOR, VIEWER)." },
        "permissions": { "type": "array", "description": "List of permissions granted to the user.", "items": { "type": "string" } },
        "firstName": { "type": "string", "description": "First name of the user." },
        "lastName": { "type": "string", "description": "Last name of the user." },
        "phone": { "type": "string", "description": "Phone number of the user." },
        "photoUrl": { "type": "string", "description": "URL of the user's profile photo.", "format": "uri" },
        "department": { "type": "string", "description": "Department the user belongs to." },
        "position": { "type": "string", "description": "Job position of the user." },
        "theme": { "type": "string", "description": "Preferred theme of the application (e.g., light, dark, auto)." },
        "language": { "type": "string", "description": "Preferred language of the application (e.g., es, en)." },
        "notifications": {
          "type": "object",
          "properties": {
            "email": { "type": "boolean" },
            "push": { "type": "boolean" },
            "sms": { "type": "boolean" },
            "whatsapp": { "type": "boolean" }
          }
        },
        "dashboardSettings": {
          "type": "object",
          "properties": {
            "defaultView": { "type": "string" },
            "favoriteWidgets": { "type": "array", "items": { "type": "string" } }
          }
        },
        "createdAt": { "type": "string", "description": "Timestamp indicating when the user account was created.", "format": "date-time" },
        "lastLogin": { "type": "string", "description": "Timestamp indicating the last time the user logged in.", "format": "date-time" },
        "loginCount": { "type": "number", "description": "Number of times the user has logged in." },
        "ipAddress": { "type": "string", "description": "IP address of the user's last login." },
        "deviceInfo": { "type": "string", "description": "Information about the device used for the user's last login." },
        "isActive": { "type": "boolean", "description": "Indicates whether the user account is active." },
        "twoFactorEnabled": { "type": "boolean", "description": "Indicates whether two-factor authentication is enabled for the user." }
      },
      "required": ["uid", "email", "role", "firstName", "lastName", "isActive"]
    },
    "Client": {
      "title": "Client",
      "type": "object",
      "description": "Represents a client within the Maestro-Ya Pro application.",
      "properties": {
        "ownerId": { "type": "string", "description": "Reference to the User entity who created the client." },
        "type": { "type": "string", "description": "Type of client (e.g., individual, business)." },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "businessName": { "type": "string" },
        "idType": { "type": "string" },
        "idNumber": { "type": "string" },
        "taxId": { "type": "string" },
        "photoUrl": { "type": "string", "format": "uri" },
        "primaryPhone": { "type": "string" },
        "secondaryPhone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "whatsapp": { "type": "string" },
        "preferredChannel": { "type": "string" },
        "addresses": { "type": "array", "items": { "$ref": "#/entities/ClientAddress" } },
        "creditLimit": { "type": "number" },
        "paymentTerms": { "type": "number" },
        "preferredPaymentMethods": { "type": "array", "items": { "type": "string" } },
        "taxExempt": { "type": "boolean" },
        "discount": { "type": "number" },
        "accountBalance": { "type": "number" },
        "documentIds": { "type": "array", "items": { "type": "string" } },
        "tier": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "source": { "type": "string" },
        "referredBy": { "type": "string" },
        "lifetimeValue": { "type": "number" },
        "averageTicket": { "type": "number" },
        "totalOrders": { "type": "number" },
        "serviceCategories": { "type": "array", "items": { "type": "string" } },
        "preferredMasters": { "type": "array", "items": { "type": "string" } },
        "blacklistedMasters": { "type": "array", "items": { "type": "string" } },
        "specialRequirements": { "type": "string" },
        "schedule": {
          "type": "object",
          "properties": {
            "availability": { "type": "string" },
            "restrictedHours": { "type": "array", "items": { "type": "string" } }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "createdBy": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "updatedBy": { "type": "string" },
        "lastOrderDate": { "type": "string", "format": "date-time" },
        "notes": { "type": "string" },
        "status": { "type": "string" },
        "rating": { "type": "number" },
        "isDeleted": { "type": "boolean" },
        "deletedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["ownerId", "type", "email"]
    },
    "ClientAddress": {
      "title": "ClientAddress",
      "type": "object",
      "description": "Represents an address associated with a client.",
      "properties": {
        "type": { "type": "string" },
        "label": { "type": "string" },
        "street": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string" },
        "zipCode": { "type": "string" },
        "country": { "type": "string" },
        "coordinates": {
          "type": "object",
          "properties": { "lat": { "type": "number" }, "lng": { "type": "number" } }
        },
        "isPrimary": { "type": "boolean" },
        "instructions": { "type": "string" }
      },
      "required": ["street", "city", "country"]
    },
    "Master": {
      "title": "Master",
      "type": "object",
      "description": "Represents a master (professional) within the Maestro-Ya Pro application.",
      "properties": {
        "ownerId": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "phone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "photoUrl": { "type": "string", "format": "uri" },
        "specialties": { "type": "array", "items": { "type": "string" } },
        "rating": { "type": "number" },
        "status": { "type": "string", "description": "e.g., active, inactive, pending_verification" },
        "documents": {
          "type": "array",
          "description": "A list of documents associated with the master.",
          "items": {
            "$ref": "#/entities/MasterDocument"
          }
        },
        "availability": {
            "type": "object",
            "properties": {
                "monday": { "type": "string" },
                "tuesday": { "type": "string" },
                "wednesday": { "type": "string" },
                "thursday": { "type": "string" },
                "friday": { "type": "string" },
                "saturday": { "type": "string" },
                "sunday": { "type": "string" }
            }
        },
        "bankInfo": {
            "type": "object",
            "properties": {
                "bankName": { "type": "string" },
                "accountNumber": { "type": "string" },
                "accountType": { "type": "string" },
                "accountHolder": { "type": "string" }
            }
        },
        "internalNotes": { "type": "string", "description": "Internal notes about the master, not visible to the client." }
      },
       "required": ["ownerId", "firstName", "lastName", "email", "status"]
    },
    "MasterDocument": {
      "title": "MasterDocument",
      "type": "object",
      "description": "Represents a document uploaded by a master.",
      "properties": {
        "name": { "type": "string", "description": "The user-defined name of the document (e.g., 'CÃ©dula Profesional')." },
        "url": { "type": "string", "format": "uri", "description": "The URL where the document is stored." }
      },
      "required": ["name", "url"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user account information including profile, preferences, and metadata."
    },
    "/clients/{clientId}": {
      "schema": { "$ref": "#/entities/Client" },
      "description": "Stores detailed information about a client, including their relations and transaction history."
    },
    "/masters/{masterId}": {
      "schema": { "$ref": "#/entities/Master" },
      "description": "Stores information about masters (professionals)."
    }
  }
}
